@model IEnumerable<GIP1.Web.Entities.Lokaal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Locatie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capaciteit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opmerking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Middelen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Locatie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capaciteit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opmerking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Middelen)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Lokaalcode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Lokaalcode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Lokaalcode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
